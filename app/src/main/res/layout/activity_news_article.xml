<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".news.NewsArticle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/news_article_scroll">

        <RelativeLayout
            android:id="@+id/news_article_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/news_article_image"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/article_image"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_article_date"
                android:layout_alignLeft="@id/news_article_image"
                android:layout_alignStart="@id/news_article_image"
                android:layout_alignTop="@id/news_article_image"
                android:layout_alignRight="@id/news_article_image"
                android:layout_alignEnd="@id/news_article_image"
                android:background="#7f3c3c3c"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_article_title"
                android:textSize="20sp"
                android:layout_below="@id/news_article_image"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_article_text"
                android:layout_below="@id/news_article_title"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:linksClickable="true"/>
        </RelativeLayout>
    </ScrollView>
